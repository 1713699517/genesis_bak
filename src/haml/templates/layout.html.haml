!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title 創世紀-系统管理-{% block title %}{% endblock %}
    %link{:href => '/static/css/thickbox.css', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href => '/static/css/admin/index.css', :rel => 'stylesheet', :type => 'text/css'}
    %script{:src => "/static/js/jquery/jquery.js", :type => 'text/javascript'}
    %script{:src => "/static/js/jquery/jquery.thickbox.js", :type => 'text/javascript'}
    %script{:src => "/static/js/jquery/jquery.base64.js", :type => 'text/javascript'}
    %script{:src => "/static/js/jquery/jquery.form.js", :type => 'text/javascript'}
    %script{:src => "/static/js/admin/index.js", :type => 'text/javascript'}
  %body
    #header
      #main
        %label{:id => "logo"} Genesis 創世紀
        %a{:id => "logout", :href => '{% url controller="admin" action="logout" %}'} 登出
    #center
      #main
        #side
          .menu
            %span{:class => "title"} 用户管理
            %ul{:class => "group"}
              %li{:class => "item"}
                %a.thickbox{:id => 'create_player', :title => "請輸入玩家信息", :href => '/player/create?height=160&width=218'} 創建玩家
              %li{:class => "item"}
                %a.thickbox{:id => 'create_agent', :title => "請輸入代理信息", :href => '/agent/create?height=180&width=218'} 創建代理
        #content
          = '{% block body %}'
          = '{% endblock %}'
    #footer
      #main
        %label{:id => "copyright"} Genesis © 2012
